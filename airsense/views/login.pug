extends layout

block content
  .main.container
    .row    
      .col-lg-offset-2.col-lg-8.col-md-offset-3.col-md-6.col-xs-12.col-sm-12.loggin
        h1 Airsense
        h2 Login
        form(method='POST' action='/login')
          div.form
            div.row
            label.login-form(for='username') Username
            input(type='text' id='username' placeholder='Username')
            div.row
            label.login-form(for='password') Password
            input(type='text' id='password' placeholder='Password')           
            div.row
            br
            button.form(type='submit') Log In


